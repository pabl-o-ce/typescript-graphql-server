{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "lib": ["esnext", "es2018", "es2017", "es6", "es2015", "esnext.asynciterable", "dom"],
    "target": "ESNext",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "typings/index.d.ts",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}